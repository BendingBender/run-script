{
  "name": "yarpm",
  "version": "0.2.1",
  "description": "CLI tool to run npm scripts with either npm or yarn, depending on how it was started",
  "bin": {
    "yarpm": "bin/yarpm.js",
    "yarpm-yarn": "bin/yarpm-yarn.js"
  },
  "main": "lib/index.js",
  "scripts": {
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BendingBender/yarpm.git"
  },
  "keywords": [
    "npm",
    "yarn",
    "npm-scripts",
    "cross-platform",
    "npm-package",
    "cli"
  ],
  "author": "Dimitri Benin <semtexx@web.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BendingBender/yarpm/issues"
  },
  "homepage": "https://github.com/BendingBender/yarpm#readme",
  "dependencies": {
    "command-exists": "^1.2.9",
    "cross-spawn": "^7.0.3"
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
